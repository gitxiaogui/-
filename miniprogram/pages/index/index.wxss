/* miniprogram/pages/user/myNeed/myNeed.wxss */
#index .list{
  padding:0 20rpx 0 10rpx;
  background: #fff;
  margin:20rpx 0;
}
#index .list .li{
  display: flex;
  height:180rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding: 10rpx 0;
}
#index .list .li .left{
  position: relative;
  height:160rpx;
  width:160rpx;
  line-height: 160rpx;
  text-align: center;
  margin-right:20rpx;
}
#index .list .li .left image{
  height:160rpx;
  width:160rpx;
}
#index .list .li .left .lg{
  position: absolute;
  font-size:160rpx;
  display: block;
  left:0;
  top:0;

}
#index .list .li .left view{
  position: relative;
  color:#000;
  font-size:30rpx;
  font-weight:bold;
}
#index .list .li .right{
  flex: 1;
  padding:6rpx 0;
}
#index .list .li .right .title{
  height:74rpx;
  color:#333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
#index .list .li .right .time{
  font-size:24rpx;
  color:#aaa;
}
#index .list .li .right .time:nth-of-type(1){
  margin-bottom:4rpx;
}